{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "moduleResolution": "node16",
    "module": "Node16",
    "lib": ["es2022"]
  },
  "include": ["src/**/*"]
}
